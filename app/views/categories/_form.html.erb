<%= form_for @category, url: url do |f| %>
  <div>
      <%= f.label :name, class: '' %>
      <div class="form">
          <%= f.text_field :name, class: '' %>
      </div>
  </div>

  <div>
      <%= f.label :description, class: '' %>
      <div class="form">
          <div>
              <%= f.text_area :description, rows: 10 %>
          </div>
      </div>
  </div>

  <fieldset>
      <legend>Фоновое изображение</legend>
        <div>
            <% if f.object.fon.url != '/images/original/missing.png' %>
              <%= image_tag f.object.fon.url(:medium) %>
            <% else %>
              <%= f.file_field :fon %>
            <% end %>
        </div>

  </fieldset>


  <br>
  <div class="col col-sm-10 col-sm-offset-2">
      <%= f.submit 'Сохранить', class: 'button small' %> или <%= link_to 'Отмена', categories_path, class: 'button small secondary' %>
  </div>
<% end %>